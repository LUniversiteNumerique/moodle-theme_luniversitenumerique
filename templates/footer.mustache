                    <li class="menu-item"><a href="http://luniversitenumerique.fr/evenements/">Événements</a></li>
                    <li class="menu-item"><a href="http://luniversitenumerique.fr/actualites/">Actus</a></li>
                </ul>
            </div>
            <div class="col-12 col-md-4">
                <ul class="menu">
                    <li class="menu-item"><a href="http://luniversitenumerique.fr/mentions-legales/">Mentions légales</a></li>
                    <li class="menu-item"><a href="http://luniversitenumerique.fr/faq/">FAQ</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container pt-4 footer-credits border-mixin">
        <div class="row">
            <div class="col-12 col-md-4">
                <p class="footer-copyright pt-4">
                    &copy; {{{year}}} <a href="http://luniversitenumerique.fr/" class="un-link">L'Université Numérique</a>
                </p>
            </div>
            <div class="col-12 col-md-8 mr-auto">
                <div id="course-footer">{{{ output.course_footer }}}</div>

                {{# output.page_doc_link }}
                    <p class="helplink">{{{ output.page_doc_link }}}</p>
                {{/ output.page_doc_link }}

                {{{ output.login_info }}}
                <div class="tool_usertours-resettourcontainer"></div>
                {{{ output.home_link }}}
                <nav class="nav navbar-nav d-md-none" aria-label="{{#str}}custommenu, admin{{/str}}">
                    {{# output.custom_menu_flat }}
                        <ul class="list-unstyled pt-3">
                            {{> theme_boost/custom_menu_footer }}
                        </ul>
                    {{/ output.custom_menu_flat }}
                </nav>
                {{{ output.standard_footer_html }}}
                {{{ output.standard_end_of_body_html }}}
            </div>
        </div>
    </div>
